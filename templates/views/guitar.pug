extends ../layouts/default

block content
	.container
		h1= data.guitar.title
		a(href="/guitars") &larr; Go back
		.row
			.col-sm-12.col-md-12
				if data.guitar.image
					img.img-responsive(src=`${data.guitar.image.secure_url}`)
			.col-sm-12.col-md-12
				h2.description!= data.guitar.description
				.row
					.col-md-12
						h3.g-info
							strong Price: 
							span $#{data.guitar.price}
						h3.g-info
							strong Quantity: 
							if data.guitar.qty
								span= data.guitar.qty
							else
								span Out of stock
						div.text-center
							a.g-contact.btn.btn-success(href="/contact") I want it!
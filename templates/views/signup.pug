extends ../layouts/default

block content
	.container
		.row: .col-md-4.col-md-offset-4
			h1 Signup
			form(method='post')
				input(type='hidden', name='action', value='signup')
				.form-group
					label(for='first') First name
					input.form-control#first(type='text' name='first' required autocomplete='off')
				.form-group
					label(for='last') Last name
					input.form-control#last(type='text' name='last' required autocomplete='off')
				.form-group
					label(for='email') Email
					input.form-control#email(type='email' name='email' required autocomplete='off')
				.form-group
					label(for='password') Password
					input.form-control#password(type='password' name='password' required autocomplete='off')
				button(type='submit').btn.btn-primary Sign in